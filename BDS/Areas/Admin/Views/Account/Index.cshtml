@model PagedList.IPagedList<Model.EF.Account>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh sách Menu Level 1
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách
                <a class="pull-right button-create" href="~/Admin/Account/Create">
                    <i class="fa fa-plus"></i>Tạo mới
                </a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên tài khoản</th>
                                <th>Họ tên</th>
                                <th>Giới tính</th>
                                <th>Địa chỉ</th>
                                <th>Ngày sinh</th>
                                <th>Email</th>
                                <th>Số điện thoại</th>
                                <th>Trạng Thái</th>
                                <th>Chỉnh sửa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.UserName">
                                    <td>@item.UserName</td>
                                    <td>@item.FullName</td>
                                    <td>@(item.Gender == true ? "Nam" : "Nữ")</td>
                                    <td>@item.Address</td>
                                    <td>@item.DateOfBirth</td>
                                    <td>@item.Email</td>
                                    <td>@item.Mobi</td>
                                    <td>@(item.AccountStatus == true ? "Hoạt động" : "Tạm khóa")</td>
                                    <td>
                                        <a href="/Admin/Account/Update/@item.UserName">Sửa</a>|
                                        @Ajax.ActionLink("Xóa","Delete",new {@id = item.UserName },new AjaxOptions {
                                       Confirm = "Bạn có muốn xóa bản ghi này?",
                                       OnComplete = "$('#row_"+@item.UserName+"').remove()",
                                       HttpMethod = "Delete"

                                   })
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>
