@model PagedList.IPagedList<Model.EF.MenuLv1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách Menu Level 1";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh sách Menu Level 1
    }

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách
                <a class="pull-right button-create" href="~/Admin/MenuLevel1/Create">
                    <i class="fa fa-plus"></i>Tạo mới 
                </a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên Menu(VN)</th>
                                <th>Tên Menu(EN)</th>
                                <th>Trạng Thái</th>
                                <th>Chỉnh sửa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.MenuLv1ID">
                                    <td>@item.MenuName_VN</td>
                                    <td>@item.MenuName_EN</td>
                                    <td>@(item.Status == true ?"Hoạt động":"Tạm khóa")</td>
                                    <td>
                                        <a href="~/Admin/MenuLevel1/Update/@item.MenuLv1ID">Sửa</a>|
                                        @Ajax.ActionLink("Xóa","Delete",new {@id = item.MenuLv1ID },new AjaxOptions {
                                       Confirm = "Bạn có muốn xóa bản ghi này?",
                                       OnComplete = "$('#row_"+@item.MenuLv1ID+"').remove()",
                                       HttpMethod = "Delete"

                                   })
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page =>Url.Action("Index", new { page}))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
</div>